<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:hint="@string/enter_first_name"
            android:drawableStart="@drawable/baseline_emoji_emotions_24"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:hint="@string/enter_last_name"
            android:drawableStart="@drawable/baseline_emoji_emotions_24"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_below="@+id/TVUL"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/baseline_alternate_email_grey_24"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:hint="@string/enter_password"
            android:layout_below="@+id/Email"
            android:layout_above="@+id/BSignin"
            android:layout_gravity="left"
            android:inputType="textPassword"
            android:drawableStart="@drawable/password_76"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/BRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Password"
            android:layout_gravity="center"
            android:layout_marginHorizontal="80dp"
            android:background="@drawable/form_submit_button"
            android:text="Sign Up"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BRegister"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Click here to go to Login Page"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/TVUL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Email"
        android:layout_gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="166dp"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral40"
        android:textSize="32dp" />

    <!--logo-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="520dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>
